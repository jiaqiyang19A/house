<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Window" x:Key="loginWindowStyle">
        <Setter Property="Width" Value="600"/>
        <Setter Property="Height" Value="320"/>
        <Setter Property="ResizeMode" Value="CanMinimize"/>
        <Setter Property="WindowStyle" Value="SingleBorderWindow"/>
        <Setter Property="WindowState" Value="Normal"/>
        <Setter Property="Icon" Value="../imgs/house.jpg"/>
    </Style>

    <Style TargetType="TextBox" x:Key="textBoxStyle" BasedOn="{StaticResource txtBaseStyle}">
        <!--<Setter Property="Width" Value="150"/>
        <Setter Property="Height" Value="25"/>-->
        <Setter Property="Margin" Value="3,0,0,0"/>
    </Style>

    <Style TargetType="PasswordBox" x:Key="passwordBoxStyle" BasedOn="{StaticResource psdBaseStyle}">
        <!--<Setter Property="Width" Value="150"/>
        <Setter Property="Height" Value="25"/>-->
        <Setter Property="Margin" Value="3,0,0,0"/>
    </Style>

    <Style TargetType="Label" x:Key="lblStyle" >
        <Setter Property="Width" Value="50"></Setter>
        <Setter Property="Margin" Value="0"></Setter>
        <Setter Property="Foreground" Value="White" ></Setter>
    </Style>
</ResourceDictionary>