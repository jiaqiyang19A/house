                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisY>
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Values="25,40,80,55" LineSmoothness="0" Stroke="Red" Fill="LightGreen" PointGeometrySize="20"  PointForeground="Green">
